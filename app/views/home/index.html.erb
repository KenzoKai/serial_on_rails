<div class="container-fluid" data-controller="serial">
  <div class="row">
    <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
      <div class="position-sticky pt-3">
        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
          <span>Devices</span>
        </h6>
        <ul class="nav flex-column" id="device-list" data-serial-target="deviceList">
          <li class="nav-item">
            <a class="nav-link" href="#">
              No devices connected
            </a>
          </li>
        </ul>

        <div class="px-3 mt-3">
          <button id="connect-button" class="btn btn-primary" data-action="click->serial#connectDevice" data-serial-target="connectButton">Connect to Device</button>
        </div>
      </div>
    </nav>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
      </div>

      <div id="main-content" data-serial-target="mainContent">
        <p>Welcome to Serial on Rails! Connect to a device to get started.</p>
      </div>
    </main>
  </div>
</div>
