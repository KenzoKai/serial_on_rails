<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Device: <%= @device.name %></h1>
</div>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Device Details</h5>
    <p class="card-text"><strong>Port:</strong> <%= @device.port %></p>
    <p class="card-text"><strong>Firmware Version:</strong> <%= @device.firmware_version %></p>
    <p class="card-text"><strong>Status:</strong> <%= @device.status %></p>
    <%= link_to 'Back to Home', root_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="mt-4">
  <h3>Profiles</h3>
  <ul class="list-group">
    <% @device.profiles.each do |profile| %>
      <li class="list-group-item">
        <%= link_to profile.name, device_profile_path(@device, profile) %>
      </li>
    <% end %>
  </ul>
  <div class="mt-3">
    <%= link_to 'New Profile', new_device_profile_path(@device), class: 'btn btn-success' %>
  </div>
</div>
